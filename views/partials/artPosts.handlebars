<article>
    <div>
        <div id="color-change" class="card" onclick="colorChange()">
            <div class="name-post">
                <a href="art/update/{{id}}" class="links">{{user.username}}</a>
            </div>

            <div class="text-post">

                <div class="user-text">
                <p>{{art_text}}</p>
                </div>

            </div>

        </div>

    </div>
</article>

<script>
function colorChange(){
    var element = document.getElementById("color-change");
    if (element.classList.contains("color-change")) {
        element.classList.remove("color-change");
    } else {
        element.classList.add("color-change");
    }
}
</script>   