<a href="/topics" class="go-back"> &larr; Select Another Topic</a>

<section class="">
    <div class="">
        <ul class="post-list">
            {{#each techPosts as |post|}}
            <li>
                {{> techPosts as post }}
            </li>
                {{/each}}
        </ul>

    </div>
</section>

{{!-- TODO: figure out how to add each post's comments within the #each --}}
{{#if post.TechComment}}
<div class="comments">
    {{#each this}}
    <section class="comment">
{{> techComments post.comments}}
    {{/each}}
{{/if}}
</div>


<article class="">
    <section class="">
        <div class="">
            <h2>Create New Post</h2>
        </div>
        <div class="">
            <form class="">
                <div class="">
                    <label for="post-title">Title</label>
                    <input type="text" id="post-title" name="post-title" />
                </div>
                <div class="post-content">
                    <label for="post-content">Content</label>
                    <textarea class="entry-field" id="post-content" name="post-content"></textarea>
                </div>
                <button type="submit" class="btn">Create</button>
            </form>
        </div>
    </section>
</article>

<script src="/js/add-post.js"></script>