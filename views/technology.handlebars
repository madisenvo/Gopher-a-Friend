<section class="">
    <div class="">
        <ul class="post-list">
            <li>
                {{#each techPosts}}
                    <article class="">
                        <div class="">
                            <div class="">
                                <div class="">
                                    <a href="/techpost/{{id}}" class="links">{{tech_title}}</a>
                                </div>
                                <div class="">
                                    <p id="">
                                        Posted By <b>{{user.username}} </b>
                                    </p>
            </div>
        </div>
        <div class="">
            <p>{{tech_text}}</p>
        </div>
    </div>
</article>
                        {{!-- {{#if techPost.TechComment}}
                            <div class="comments">
                                {{#each this}}
                                    <section class="comment">
                                        {{> techComments }}
                                {{/each}}
                            </div>
                        {{/if}} --}}
                {{/each}}
            </li>
        </ul>
    </div>
</section>

<article class="">
    <section class="">
        <div class="">
            <h2>Create New Technology Post</h2>
        </div>
        <div class="">
            <form class="tech-post-form">
                <div class="">
                    <label for="post-title">Title</label>
                    <input type="text" id="post-title" name="post-title" />
                </div>
                <div class="post-content">
                    <label for="post-content">Content</label>
                    <textarea class="entry-field" id="post-body" name="post-content"></textarea>
                </div>
                <button type="submit" class="btn">Create</button>
            </form>
        </div>
    </section>
</article>

<script src="/js/technew.js"></script>