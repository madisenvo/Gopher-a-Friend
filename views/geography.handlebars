<a href="/profile" class="go-back"> &larr; Return to Profile </a>

<section class="">
    <div class="">
        <ul class="post-list">
            <li>
                {{#each geoPosts as |geoPost|}}
                    {{> geoPosts as geoPost }}
                        {{#if geoPost.geoComment}}
                            <div class="comments">
                                {{#each this}}
                                    <section class="comment">
                                        {{> geoComments }}
                                {{/each}}
                            </div>
                        {{/if}}
                {{/each}}
            </li>
        </ul>
    </div>
</section>

<article class="">
    <section class="">
        <div class="">
            <h2>Create New Geography Post</h2>
        </div>
        <div class="">
            <form class="geo-post-form">
                <div class="">
                    <label for="post-title">Title</label>
                    <input type="text" id="post-title" name="post-title" />
                </div>
                <div class="post-content">
                    <label for="post-content">Content</label>
                    <textarea class="entry-field" id="post-content" name="post-content"></textarea>
                </div>
                <button type="submit" class="btn">Create</button>
            </form>
        </div>
    </section>
</article>

<script src="/js/geonew.js"></script>