<section class="">
    <div class="">
        <ul class="post-list">
            <li>
                {{#each artPosts as |artPost|}}
                    {{> artPosts artPost}}
                {{/each}}
            </li>
        </ul>   
    </div>
</section>

<article class="">
    <section class="">
        <div class="">
            <h2>Create a Post</h2>
        </div>
        <div class="">
            <form id = "art-post-form" class="art-post-form">
                <div class="post-content">
                    <label for="post-content">Content</label>
                    <textarea class="entry-field" id="post-body" name="art-post-body"></textarea>
                </div>
                <button type="submit" class="btn">Create</button>
            </form>
        </div>
    </section>
</article>

